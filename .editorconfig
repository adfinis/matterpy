# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line          = lf
insert_final_newline = true
charset              = utf-8
trim_trailing_whitespace = true


# 4 space indentation
[*.py]
indent_style = space
indent_size  = 4

[*.rst]
indent_style = space
indent_size  = 3


[Makefile]
indent_style = tab
indent_size  = 4

[{*.rb,Vagrantfile}]
indent_style = space
indent_size  = 2
